@page
@model SalonPlannerWebApp.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="card-container">
    <div class="card">
        <div class="card-header">Edit Employee</div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Employee.Id" />
                <div class="form-group">
                    <label asp-for="Employee.FirstName" class="control-label"></label>
                    <input asp-for="Employee.FirstName" class="form-control" />
                    <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employee.LastName" class="control-label"></label>
                    <input asp-for="Employee.LastName" class="form-control" />
                    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employee.Email" class="control-label"></label>
                    <input asp-for="Employee.Email" class="form-control" />
                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employee.Phone" class="control-label"></label>
                    <input asp-for="Employee.Phone" class="form-control" />
                    <span asp-validation-for="Employee.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employee.Position" class="control-label"></label>
                    <input asp-for="Employee.Position" class="form-control" />
                    <span asp-validation-for="Employee.Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employee.Experience" class="control-label"></label>
                    <input asp-for="Employee.Experience" type="number" class="form-control" />
                    <span asp-validation-for="Employee.Experience" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employee.Studies" class="control-label"></label>
                    <input asp-for="Employee.Studies" class="form-control" />
                    <span asp-validation-for="Employee.Studies" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
