@page
@model SalonPlannerWebApp.Pages.AppointmentsClients.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Lista programărilor tale</h1>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Caută după data programării:
            <input type="text" name="searchDate" value="@Model.CurrentFilter" placeholder="yyyy-MM-dd" class="form-control" style="display:inline-block; width:auto;" />
            <input type="submit" value="Filter" class="btn btn-primary" />
            |
            <a asp-page="./Index">Resetează lista</a>
        </p>
    </div>
</form>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nume client
            </th>
            <th>
               Nume angajat
            </th>
            <th>
                Serviciu
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">Data</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                 @* <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                 <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
