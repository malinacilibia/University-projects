@page
@model SalonPlannerWebApp.Pages.Services.DeleteModel

@{
    ViewData["Title"] = "Delete Service";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card-container">
    <div class="card">
        <div class="card-header text-danger">Delete Service</div>
        <div class="card-body">
            <h4>Are you sure you want to delete this service?</h4>
            <dl class="row">
                <dt class="col-sm-2">Nume</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service.Name)</dd>
                <dt class="col-sm-2">Descriere</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service.Description)</dd>
                <dt class="col-sm-2">Pret</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service.Price)</dd>
                <dt class="col-sm-2">Durata</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service.Duration)</dd>
              
                   
            </dl>
            <form method="post">
                <input type="hidden" asp-for="Service.ID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
