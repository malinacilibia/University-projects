@page
@model SalonPlannerWebApp.Pages.Services.DetailsModel

@{
    ViewData["Title"] = "Service Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card-container">
    <div class="card">
        <div class="card-header">Service Details</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Nume</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service.Name)</dd>
                <dt class="col-sm-2">Descriere</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service.Description)</dd>
                <dt class="col-sm-2">Pret</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service.Price)</dd>
                <dt class="col-sm-2">Durata</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service.Duration)</dd>
                <dt class="col-sm-2">Categorie</dt>
                <dd class="col-sm-10">
                    @foreach (var category in Model.Service.ServiceCategories)
                    {
                        <span>@category.Category.Name</span>

                        <br />
                    }
                </dd>
            </dl>
            <div class="form-group mt-4">
                <a asp-page="./Edit" asp-route-id="@Model.Service.ID" class="btn btn-primary">Edit</a>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
