@page
@model SalonPlannerWebApp.Pages.Feedbacks.DetailsModel

@{
    ViewData["Title"] = "Feedback Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card-container">
    <div class="card">
        <div class="card-header">Feedback Details</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Angajat</dt>
                <dd class="col-sm-10">@Model.Feedback.Employee.FirstName @Model.Feedback.Employee.LastName</dd>
                <dt class="col-sm-2">Serviciu</dt>
                <dd class="col-sm-10">@Model.Feedback.Service.Name</dd>
                <dt class="col-sm-2">Comentariu</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Feedback.Comments)</dd>
                <dt class="col-sm-2">Rating</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Feedback.Rating)</dd>
                <dt class="col-sm-2">Data</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Feedback.Date)</dd>
            </dl>
            <div class="form-group mt-4">
                <a asp-page="./Edit" asp-route-id="@Model.Feedback.ID" class="btn btn-primary">Edit</a>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
