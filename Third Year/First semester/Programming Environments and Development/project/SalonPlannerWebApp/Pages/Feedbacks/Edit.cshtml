@page
@model SalonPlannerWebApp.Pages.Feedbacks.EditModel

@{
    ViewData["Title"] = "Edit Feedback";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card-container">
    <div class="card">
        <div class="card-header">Edit Feedback</div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Feedback.ID" />
                <div class="form-group">
                    <label asp-for="Feedback.EmployeeID" class="control-label"></label>
                    <select asp-for="Feedback.EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
                    <span asp-validation-for="Feedback.EmployeeID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Feedback.ServiceID" class="control-label"></label>
                    <select asp-for="Feedback.ServiceID" class="form-control" asp-items="ViewBag.ServiceID"></select>
                    <span asp-validation-for="Feedback.ServiceID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Feedback.Comments" class="control-label"></label>
                    <input asp-for="Feedback.Comments" class="form-control" />
                    <span asp-validation-for="Feedback.Comments" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Feedback.Rating" class="control-label"></label>
                    <input asp-for="Feedback.Rating" class="form-control" />
                    <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Feedback.Date" class="control-label"></label>
                    <input asp-for="Feedback.Date" class="form-control" />
                    <span asp-validation-for="Feedback.Date" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
